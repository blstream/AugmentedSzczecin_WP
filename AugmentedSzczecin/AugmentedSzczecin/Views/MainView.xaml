<Page
    x:Class="AugmentedSzczecin.Views.MainView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:AugmentedSzczecin.Views"
    xmlns:caliburn="using:Caliburn.Micro"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">


    <Grid x:Name="LayoutRoot"
          Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="1.6180339887*" />
        </Grid.RowDefinitions>


        <FlipView Margin="-3" SelectedIndex="{Binding SelectedBackground, Mode=TwoWay}" ItemsSource="{Binding BackgroundList}" />
        <Grid
            Grid.Row="0"
            x:Name="LayoutHeader">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Rectangle
                VerticalAlignment="Top"
                Margin="-35, 30, 0, 0"
                RadiusX="35"
                RadiusY="35"
                Height="75"
                Fill="White" />
            <TextBlock
                Margin="17.5, 37.5, 0, 0"
                VerticalAlignment="Top"
                Foreground="{StaticResource ASNavy}"
                Text="AUGMENTED"
                FontSize="25.5"
                FontWeight="Normal"
                FontFamily="Segoe WP" />
            <TextBlock
                Margin="17.5, 57.5, 0, 0"
                VerticalAlignment="Top"
                Foreground="{StaticResource ASRed}"
                Text="SZCZECIN"
                FontSize="32"
                FontWeight="Bold"
                FontFamily="Segoe WP" />

            <StackPanel Grid.Column="1">
                <Border
                    Visibility="{Binding IsGuest, Converter={StaticResource BoolToVisConv}}"
                    caliburn:Message.Attach="[Event Tapped] = [Action NavigateToSignIn]"
                    Margin="0, 40, 0, 0"
                    CornerRadius="50"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Top"
                    Background="White">
                    <Border.RenderTransform>
                        <ScaleTransform ScaleX="0.75" ScaleY="0.75" />
                    </Border.RenderTransform>
